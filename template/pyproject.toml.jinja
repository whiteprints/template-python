[build-system]
build-backend = "hatchling.build"

requires = [
    "hatchling",
    "typing-extensions",
]

[project]
name = "{% include pathjoin('includes', 'project_slug.jinja') %}"
dynamic = ["version"]
description = "{{ description }}"
readme = "README.md"
keywords = [
    "Python",
]

maintainers = [
    { name = "{{ author }}", email = "{{ organisation_email }}" },
]
authors = [
    { name = "{{ author }}", email = "{{ organisation_email }}" },
]
requires-python = ">={% include pathjoin('includes', 'target_python.jinja') %},<4.0"
classifiers = [
    "Development Status :: 1 - Planning",
    "Environment :: Console",
    "Framework :: Pytest",
    "Framework :: Sphinx",
    "Framework :: tox",
    "Intended Audience :: Developers",
    "Natural Language :: English",
    "Operating System :: OS Independent",
    "Programming Language :: Python",
    "Programming Language :: Python :: 3 :: Only",
    "Typing :: Typed",
{%- if spdx_license == '' %}
    "Private :: Do Not Upload",
{%- endif %}
]
dependencies = []

{%- if code_license_id != "" %}
license = "{{ code_license_id }}"
{%- else %}
license = "LicenseRef-PROPRIETARY"
{%- endif %}

[tool.uv]
managed = true
dev-dependencies = [
    # profile
    "scalene>=1.5.19",
    # editors
    "pynvim>=0.4.3",
    # tests
    "beartype>=0.18.5",
    "hypothesis>=6.110.1",
    "pylint>=3.2.6",
    "pytest>=8.3.2",
    "pytest-cov>=5.0.0",
    "pytest-html>=4.1.1",
    "pytest-randomly>=3.15.0",
    "pytest-sugar>=1.0.0",
    "pytest-xdist>=3.6.1",
    "xdoctest>=1.2.0",
]
